= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |message|
          %li= message

  .field
    .h3 タイトル
    = f.text_field :title
    .field
      .h3 スタート
      .h3 年/月/日/時/分
      = f.datetime_select :start_date
      .field
        .h3 備考
        = f.text_area :description
        .actions
          = f.submit '保存'
          
        
